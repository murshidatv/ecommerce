     <form action="/admin/edit-coupon/<%= coupon._id %>" method="POST" id="add_user" onsubmit="return couponValidation(event)">
        <div class="new_uaer">
            
            <div class="form-group">
                
                Coupon Name:<label for="couponname" class="text-light"></label>
                <input type="hidden" name="id" value="<%= coupon._id %>">
                <input type="text" id="couponname" name="couponname" value="<%= coupon.couponname %>" ><br>
                <span id="couponnameError" style="color: red;"></span>
            </div>
        <div class="form-group">
           
            Coupon Code: <label for="code" class="text-light"></label>
            <input type="hidden" name="id" value="<%= coupon._id %>">
            <input type="text" id="code" name="code" value="<%= coupon.code %>" ><br>
            <span id="codeError" style="color: red;"></span>
              <% if (typeof message !== 'undefined') { %>
                    <div id="message" style="color: red;">
                      <%= message %>
                    </div>
                  <% } %>
        </div>
        <div class="form-group col-md-4">
            <label for="discountType">Discount Type:</label>
            <select id="discountType" name="discountType" class="form-control">
                <option value="percentage" <%= coupon.type === 'percentage' ? 'selected' : '' %>>Percentage</option>
                <option value="fixed" <%= coupon.type === 'fixed' ? 'selected' : '' %>>Fixed</option>
            </select>
        </div>
        <div class="form-group">
            Discount Value: <label for="discountValue" class="text-light"></label>
            <input type="number" id="discountValue" name="discountValue" value="<%= coupon.value %>" ><br>
            <span id="discountValueError" style="color: red;"></span>
        </div>
        <div class="form-group">
            Expiration Date:  <label for="expirationDate" class="text-light"></label>
            <input type="date" id="expirationDate" name="expirationDate" value="<%= (coupon.expirationDate instanceof Date) ? coupon.expirationDate.toISOString().split('T')[0] : '' %>" ><br>
            <span id="expirationDateError" style="color: red;"></span>
        </div>
        <div class="form-group">
            Total Uses: <label for="totalUses" class="text-light"></label>
            <input type="number" id="totalUses" name="totalUses" value="<%= (coupon.usageLimits && coupon.usageLimits.totalUses) ? coupon.usageLimits.totalUses : '' %>" ><br>
            <span id="totalUsesError" style="color: red;"></span>
        </div>
        <div class="form-group">
            Uses Per User: <label for="perUser" class="text-light"></label>
            <input type="number" id="perUser" name="perUser" value="<%= (coupon.usageLimits && coupon.usageLimits.perUser) ? coupon.usageLimits.perUser : '' %>" ><br>
            <span id="perUserError" style="color: red;"></span>
        </div>
        <div class="form-group">
            Min Order Amount:<label for="minOrderAmount" class="text-light"></label>
            <input type="number" id="minOrderAmount" name="minOrderAmount" value="<%= (coupon.conditions && coupon.conditions.minOrderAmount) ? coupon.conditions.minOrderAmount : '' %>" ><br>
            <span id="minOrderAmountError" style="color: red;"></span>
        </div>
        <div class="form-group">
            Description:<label for="description"></label>
            <textarea name="description" id="description" cols="50" rows="10"><%= coupon.description %></textarea><br>
            <span id="discriptionError" style="color: red;"></span>
        </div>
        <div class="mb-3 mt-4 mb-lg-4 d-grid gap-2">
           
            <div class="form-group">
                <button style="color: #ccc;" type="submit" class="btn text-dark update">Save Changes</button>
              </div>
        </div>

