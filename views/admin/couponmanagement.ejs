                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% for (var i=0; i < coupon.length; i++) { %>
                                                            <tr>
                                                                <td>
                                                                    <%= coupon[i].couponname %>
                                                                </td>
                                                                <td>
                                                                    <%= coupon[i].code %>
                                                                </td>
                                                                <td>
                                                                    <%= coupon[i].type%>
                                                                </td>
                                                                <td>
                                                                    <%= coupon[i].value%>
                                                                </td>
                                                                <td>
                                                                    <%= coupon[i].expirationDate ?
                                                                        coupon[i].expirationDate.toLocaleDateString()
                                                                        : '' %>
                                                                </td>
                                                                <td>
                                                                    <%= coupon[i].usageLimits.totalUses%>
                                                                </td>
                                                                <td>
                                                                    <%= coupon[i].usageLimits.perUser %>
                                                                </td>
                                                                <td>
                                                                    <%= coupon[i].conditions.minOrderAmount%>
                                                                </td>
                                                                <td>
                                                                    <%=coupon[i].description%>
                                                                </td>
                                                                <td>
                                                                    <button class="btn"> <a
                                                                            href="/admin/edit-coupon/<%=coupon[i]._id %>">Edit</a></button>
                                                                    <button class="btn"> <a
                                                                            href="/admin/loadcoupon/<%=coupon[i]._id %>">Delete</a></button>
                                                                </td>
                                                            </tr>
