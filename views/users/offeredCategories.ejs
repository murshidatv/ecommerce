            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->
    <div class="card" style="padding: 30px;">
        <h2>Offered Categories</h2>
        <div class="row">
            <% offeredCategories.forEach((category, index) => { %>
                <% if (category.offer && category.offer.amount && category.offer.endDate) { %>
                    <% const currentDate = new Date(); %>
                    <% const offerEndDate = new Date(category.offer.endDate); %>
                    <% if (currentDate <= offerEndDate) { %>
                        <% if (index % 3 === 0) { %>
                            </div>
                            <div class="row">
                        <% } %>
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title"><%= category.categoryName %></h5>
                                    <div class="card-text">
                                        <p class="offer-amount"><%= category.offer.amount %>% OFF</p>
                                        <p class="offer-end-date">Offer valid until: <%= category.offer.endDate.toLocaleDateString() %></p>
                                        <a href="/category/<%= category._id %>/products" class="view-products-link">View Products</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            <% }); %>
        </div>
        <a href="/product-list" class="back-to-categories">Back to Categories</a>
    </div>
</main>
